{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "types": ["node", "p5/global"],
        "baseUrl": "./",
        "noImplicitAny": false,
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["./src/**/**/*"]
}
